                            android:layout_width="200px"
                            android:layout_height="200px"
                            android:layout_marginEnd="50px"
                            android:layout_marginStart="130px"
                            android:layout_marginTop="50px"
                            android:background="@drawable/a" />

                    </LinearLayout>
                </LinearLayout>

