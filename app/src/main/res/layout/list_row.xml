<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="323dp"
    android:layout_height="82dp"
    cardview:cardCornerRadius="12dp"
    cardview:cardPreventCornerOverlap="false"
    cardview:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#66c4b1"
            android:layout_height="12dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_height="72.5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_gravity="top"
                android:layout_marginTop="11.5dp"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="12dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15">
                <TextView
                    android:id="@+id/day"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="#66c4b1"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_width="40dp"
                    android:layout_height="29dp" />
                <TextView
                    android:id="@+id/weekDay"
                    android:textSize="11sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="#afafaf"
                    android:layout_width="32dp"
                    android:layout_marginTop="7.5dp"
                    android:layout_height="11dp" />

            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="#959494" />

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:paddingLeft="13.5dp"
                android:paddingBottom="12.5dp"
                android:paddingTop="11.5dp"
                android:src="@drawable/diary_null_icon" />
            <ImageView
                android:id="@+id/icon2"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:paddingLeft="13.5dp"
                android:paddingBottom="12.5dp"
                android:paddingTop="11.5dp"
                android:src="@drawable/diary_null_icon" />
            <ImageView
                android:id="@+id/icon3"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:paddingLeft="13.5dp"
                android:paddingBottom="12.5dp"
                android:paddingTop="11.5dp"
                android:src="@drawable/diary_null_icon" />
            <ImageView
                android:id="@+id/icon4"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:paddingLeft="13.5dp"
                android:paddingRight="15dp"
                android:paddingBottom="12.5dp"
                android:paddingTop="11.5dp"
                android:src="@drawable/diary_null_icon" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>