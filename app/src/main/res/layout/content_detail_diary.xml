<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ohdoking.dansoondiary.activity.DetailDiaryActivity"
    tools:showIn="@layout/activity_detail_diary"
    android:weightSum="1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/date"
        android:layout_width="900px"
        android:layout_height="200px"
        android:textSize="27.33sp"
        android:layout_marginTop="39px"
        android:layout_marginBottom="5px"
        android:layout_marginStart="15px"

        android:textColor="#66c4b1"
        android:text="2016.2.27 화요일"
        />
    <TextView
        android:id="@+id/time"
        android:layout_width="300px"
        android:layout_height="150px"
        android:textSize="27.33sp"
        android:layout_marginTop="40px"
        android:layout_marginBottom="5px"
        android:layout_marginStart="40px"
        android:layout_marginEnd="30px"
        android:textColor="#7a7a7a"
        android:text="9:00"/>
</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">
    <ImageView
        android:id="@+id/image"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginTop="74px"
        android:layout_marginBottom="68px"
        android:layout_marginStart="5px"
        android:layout_marginEnd="20px"
        android:background="@mipmap/ic_launcher"/>
    <ImageView
        android:id="@+id/image2"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginTop="74px"
        android:layout_marginBottom="68px"
        android:layout_marginStart="20px"
        android:layout_marginEnd="20px"
        android:background="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/image3"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginTop="74px"
        android:layout_marginBottom="68px"
        android:layout_marginStart="20px"
        android:layout_marginEnd="20px"
        android:background="@mipmap/ic_launcher"/>
    <ImageView
        android:id="@+id/image4"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginTop="74px"
        android:layout_marginBottom="68px"
        android:layout_marginStart="20px"
        android:layout_marginEnd="39px"
        android:background="@mipmap/ic_launcher"/>
</LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TableLayout>

    <TextView
        android:layout_width="1290px"
        android:layout_height="600px"
        android:layout_marginTop="68px"
        android:layout_marginBottom="84px"
        android:layout_marginStart="15px"
        android:layout_marginEnd="39px"
        android:id="@+id/memo"
        android:text="회사 갔다가 책 읽고 집에 옴"
        android:textSize="20.67sp"

        android:paddingStart="35px"
        android:paddingEnd="35px"
        android:paddingTop="35px"
        android:paddingBottom="35px"
        android:background="@drawable/xml_border"
    />

   >

</LinearLayout>
