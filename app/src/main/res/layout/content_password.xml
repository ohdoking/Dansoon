<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f5f5"
        android:orientation="vertical"
        android:paddingBottom="64dp">

        <ImageView
            android:id="@+id/iconstart"
            android:layout_width="24dp"
            android:layout_height="29dp"
            android:layout_marginLeft="167dp"
            android:layout_marginRight="169dp"
            android:layout_marginTop="51dp"
            android:background="@drawable/lock_icon" />

        <TextView
            android:layout_width="105dp"
            android:layout_height="35dp"
            android:layout_marginLeft="126.5dp"
            android:layout_marginRight="128dp"
            android:layout_marginTop="13.5dp"
            android:textAlignment="center"
            android:text="비밀번호"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/pw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="19dp"
            android:text="비밀번호를 입력해주세요"
            android:textAlignment="center"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginRight="22.5dp"
                android:background="@drawable/pw_blank" />

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginRight="22.5dp"
                android:background="@drawable/pw_blank" />

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginRight="22.5dp"
                android:background="@drawable/pw_blank" />

            <ImageView
                android:id="@+id/icon4"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/pw_blank" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#959494"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="120dp"
            android:layout_height="72.5dp"
            android:layout_weight="0.40"
            android:background="@drawable/pw_button"
            android:text="1"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="120dp"
            android:layout_height="72.5dp"
            android:layout_weight="0.40"
            android:background="@drawable/pw_button"
            android:text="2"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="72.5dp"
            android:layout_weight="0.40"
            android:background="@drawable/pw_button"
            android:text="3"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="120dp"
            android:layout_height="72.5dp"
            android:layout_weight="0.40"
            android:background="@drawable/pw_button"
            android:text="4"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="120dp"
            android:layout_height="72.5dp"
            android:layout_weight="0.40"
            android:background="@drawable/pw_button"
            android:text="5"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="120dp"
            android:layout_height="72.5dp"
            android:layout_weight="0.40"
            android:background="@drawable/pw_button"
            android:text="6"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="120dp"
            android:layout_height="72.5dp"
            android:layout_weight="0.40"
            android:background="@drawable/pw_button"
            android:text="7"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="120dp"
            android:layout_height="72.5dp"
            android:layout_weight="0.40"
            android:background="@drawable/pw_button"
            android:text="8"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="120dp"
            android:layout_height="72.5dp"
            android:layout_weight="0.40"
            android:background="@drawable/pw_button"
            android:text="9"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lock_ok"
            android:layout_width="120dp"
            android:layout_height="72.5dp"
            android:layout_weight="1"
            android:background="@drawable/pw_button"
            android:text="ok"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="120dp"
            android:layout_height="72.5dp"
            android:layout_weight="1"
            android:background="@drawable/pw_button"
            android:text="0"
            android:textSize="26sp" />

        <Button
            android:id="@+id/lock_cancel"
            android:layout_width="120dp"
            android:layout_height="72.5dp"
            android:background="@drawable/pw_button"
            android:text="X"
            android:textSize="26sp" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#959494"></View>

</LinearLayout>